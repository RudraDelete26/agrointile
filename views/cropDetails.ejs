<%- include('partials/header') %>

<section style="min-height: 90vh; background: linear-gradient(135deg, #f9fdf9, #e6f7ef);">
  <div class="container py-5">

    <!-- Crop Info Card -->
    <div class="card shadow border-0 rounded-3 mb-4">
      <div class="card-header bg-success text-white rounded-top">
        <h2 class="mb-0"><i class="fas fa-leaf me-2"></i> Details for <%= crop.name %></h2>
      </div>
      <div class="card-body">
        <div class="row g-4">
          <!-- Market & Resources -->
          <div class="col-md-6">
            <h5 class="text-muted mb-3">Market &amp; Resource Info</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Current Market Price:</strong> <%= crop.currentPrice %></li>
              <li class="list-group-item"><strong>Estimated Price at Harvest:</strong> <%= crop.estimatedPrice %></li>
              <li class="list-group-item"><strong>Water Requirement:</strong> <%= crop.waterRequirement %></li>
              <li class="list-group-item"><strong>Estimated Budget:</strong> <%= crop.budgetRequirement %></li>
            </ul>
          </div>

          <!-- Growing Conditions -->
          <div class="col-md-6">
            <h5 class="text-muted mb-3">Ideal Growing Conditions</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><i class="fas fa-thermometer-half text-danger me-2"></i><strong>Optimal Temperature:</strong></span>
                <span class="badge bg-danger rounded-pill"><%= crop.reqTemp %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><i class="fas fa-tint text-info me-2"></i><strong>Optimal Humidity:</strong></span>
                <span class="badge bg-info rounded-pill"><%= crop.reqHumidity %></span>
              </li>
              <li class="list-group-item"><strong>Tentative Harvest Time:</strong> <%= crop.tentativeHarvest %></li>
            </ul>
          </div>
        </div>

        <!-- Advantages & Risks -->
        <div class="row g-4 mt-3">
          <div class="col-md-6">
            <h5 class="text-success"><i class="fas fa-check-circle me-2"></i> Advantages</h5>
            <p class="mb-0"><%= crop.advantages %></p>
          </div>
          <div class="col-md-6">
            <h5 class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i> Risk Factors</h5>
            <p class="mb-0"><%= crop.riskFactors %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Yield & Revenue -->
    <div class="card shadow border-0 rounded-3 mb-4">
      <div class="card-header bg-primary text-white rounded-top">
        <h4 class="mb-0"><i class="fas fa-chart-bar me-2"></i> Yield &amp; Revenue Prediction</h4>
      </div>
      <div class="card-body text-center">
        <div class="row g-4">
          <div class="col-md-6">
            <h6 class="text-muted">Total Estimated Yield</h6>
            <p class="display-5 fw-bold text-success"><%= crop.totalEstimatedYield %></p>
          </div>
          <div class="col-md-6">
            <h6 class="text-muted">Total Estimated Revenue</h6>
            <p class="display-5 fw-bold text-success"><%= crop.totalEstimatedRevenue %></p>
          </div>
        </div>
        <p class="mt-3 small text-muted">
          <strong>Disclaimer:</strong> Estimates are based on your land area and regional data. 
          Actual results may vary due to farming practices, weather, and market fluctuations.
        </p>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-4">
      <form action="/user/select-crop" method="POST" class="d-inline">
        <input type="hidden" name="cropName" value="<%= crop.name %>">
        <button type="submit" class="btn btn-success btn-lg shadow">
          <i class="fas fa-seedling me-2"></i> Select and Grow <%= crop.name %>
        </button>
      </form>
    </div>

  </div>
</section>

<%- include('partials/footer') %>
